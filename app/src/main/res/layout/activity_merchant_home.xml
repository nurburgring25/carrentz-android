<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MerchantRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:baselineAligned="false"
        android:background="@color/md_theme_primary">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/app_icon_inverted" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top|end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat datang"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onPrimary" />

            <TextView
                android:id="@+id/txvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onPrimary"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uang masuk"
                                android:textSize="12sp"
                                android:textColor="@color/md_theme_primary" />

                            <TextView
                                android:id="@+id/txvIncomingPayment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uang masuk"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_primary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/txvIncomingPaymentDifferencePercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/md_theme_primary"
                                tools:text="+20%" />

                            <TextView
                                android:id="@+id/txvIncomingPaymentDifferenceAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_primary"
                                tools:text="+Rp50.000"/>

                        </LinearLayout>

                    </LinearLayout>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lcIncomingPayment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton"
                            android:id="@+id/btnMostFavoriteVehicleInfo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="0dp"
                            android:layout_gravity="top|start"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="4dp"
                            app:icon="@drawable/ic_info" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kendaraan"
                                android:textSize="12sp"
                                android:textColor="@color/md_theme_primary" />

                            <TextView
                                android:id="@+id/txvMostFavoriteVehicle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_primary"
                                tools:text="Toyota Veloz" />

                            <TextView
                                android:id="@+id/txvMostFavoriteVehicleValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_primary"
                                tools:text="7" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton"
                            android:id="@+id/btnMostFavoriteVehicleDetail"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="0dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="4dp"
                            android:layout_marginEnd="4dp"
                            app:icon="@drawable/ic_arrow_forward" />

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="2dp"
                    app:cardCornerRadius="16dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton"
                            android:id="@+id/btnMostFavoriteVehicleTypeInfo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="0dp"
                            android:layout_gravity="top|start"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="4dp"
                            app:icon="@drawable/ic_info" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jenis Kendaraan"
                                android:textSize="12sp"
                                android:textColor="@color/md_theme_primary" />

                            <TextView
                                android:id="@+id/txvMostFavoriteVehicleType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_primary"
                                tools:text="MPV" />

                            <TextView
                                android:id="@+id/txvMostFavoriteVehicleTypeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_primary"
                                tools:text="7" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton"
                            android:id="@+id/btnMostFavoriteVehicleTypeDetail"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="0dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="4dp"
                            android:layout_marginEnd="4dp"
                            app:icon="@drawable/ic_arrow_forward" />

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton"
                            android:id="@+id/btnMostFavoriteStoreInfo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="0dp"
                            android:layout_gravity="top|start"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="4dp"
                            app:icon="@drawable/ic_info" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cabang"
                                android:textSize="12sp"
                                android:textColor="@color/md_theme_primary" />

                            <TextView
                                android:id="@+id/txvMostFavoriteStore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_primary"
                                tools:text="Cabang A" />

                            <TextView
                                android:id="@+id/txvMostFavoriteStoreValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_primary"
                                tools:text="16" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton"
                            android:id="@+id/btnMostFavoriteStoreDetail"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="0dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="4dp"
                            android:layout_marginEnd="4dp"
                            app:icon="@drawable/ic_arrow_forward" />

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="2dp"
                    app:cardCornerRadius="16dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton"
                            android:id="@+id/btnMostFavoriteCustomerInfo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="0dp"
                            android:layout_gravity="top|start"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="4dp"
                            app:icon="@drawable/ic_info" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pelanggan"
                                android:textSize="12sp"
                                android:textColor="@color/md_theme_primary" />

                            <TextView
                                android:id="@+id/txvMostFavoriteCustomer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_primary"
                                tools:text="Budi" />

                            <TextView
                                android:id="@+id/txvMostFavoriteCustomerValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_primary"
                                tools:text="4" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton"
                            android:id="@+id/btnMostFavoriteCustomerDetail"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="0dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="4dp"
                            android:layout_marginEnd="4dp"
                            app:icon="@drawable/ic_arrow_forward" />

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>